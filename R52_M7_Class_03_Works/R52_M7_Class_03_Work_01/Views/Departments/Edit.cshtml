@model R52_M7_Class_03_Work_01.Models.Department
@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-12">
        <h3>Edit department</h3>
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(x => x.DepartmentId)
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.DepartmentCode, new { @class = "col-form-label col-2" })
                <div class="col-4">
                    @Html.TextBoxFor(x => x.DepartmentCode, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.DepartmentCode, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.WorkArea, new { @class = "col-form-label col-2" })
                <div class="col-4">
                    @Html.EnumDropDownListFor(x => x.WorkArea, "Select one", new { @class = "form-select" })
                    @Html.ValidationMessageFor(x => x.WorkArea, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">

                <div class="col-4 offset-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        }
    </div>
    <div class="col-12">
        @Html.ActionLink("Back to list", "Index")
    </div>
</div>
@section scripts {
    <script src="~/Scripts/jquery-3.6.3.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

}

