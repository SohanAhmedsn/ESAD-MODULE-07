@model ProductInputModel
@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="col-12">
        <h3>Create new product</h3>
        <form method="post" asp-action="Create" asp-controller="Products">
            <div class="form-group row mb-1">
                <label asp-for="ProductName" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-4">
                    <input type="text" asp-for="ProductName" class="form-control form-control-sm" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="UnitPrice" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-4">
                    <input type="text" asp-for="UnitPrice" class="form-control form-control-sm">
                    <span asp-validation-for="UnitPrice" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="CategoryId" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-4">
                    <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "Id","CategoryName") )" class="form-select form-select-sm">
                        <option value="" selected>Select</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">

                <div class="col-4 offset-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>
@section scripts {

    <script src="~/libs/jquery/jquery.js"></script>
    <script src="~/libs/validate/jquery.validate.js"></script>

    <script src="~/libs/validate/jquery.validate.unobtrusive.js"></script>
}

