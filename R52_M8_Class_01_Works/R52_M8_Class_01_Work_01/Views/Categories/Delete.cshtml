@model Category
@{
    ViewData["Title"] = "Delete";
}
<div class="row">
    <div class="col-12">
        <h3>Confirm Delete?</h3>
        <form method="post" asp-action="Create" asp-controller="Categories">
            <input type="hidden" asp-for="Id" />
            <div class="form-group row mb-1">
                <label asp-for="CategoryName" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-4">
                    @Model.CategoryName
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="Description" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-4">
                   @Model.Description
                </div>
            </div>
            <div class="form-group row mb-1">

                <div class="col-4 offset-2">
                    <button type="submit" class="btn btn-danger">Confirm</button>
                </div>
            </div>
        </form>
    </div>
</div>
@section scripts {

    <script src="~/libs/jquery/jquery.js"></script>
    <script src="~/libs/validate/jquery.validate.js"></script>

    <script src="~/libs/validate/jquery.validate.unobtrusive.js"></script>
}

